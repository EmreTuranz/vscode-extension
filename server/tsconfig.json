{
	"compilerOptions": {
		"target": "es2019",
		"lib": ["ES2019"],
		"module": "commonjs",
		"moduleResolution": "node",
		"sourceMap": true,
		"strict": true,
		"outDir": "out",
		"rootDir": "src",
		"baseUrl": ".",
		"paths": {
			"@wapc/widl": ["node_modules/@wapc/widl/dist/types"],
			"@wapc/widl/*": ["node_modules/@wapc/widl/dist/types/*"]
		},
	},
	"include": ["src"],
	"exclude": ["node_modules", ".vscode-test"]
}
